# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*.{java,properties,gradle,ts,js,vue,json,html,xml,less,scss,css}]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.sql]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[package.json]
end_of_line = lf
indent_style = space
indent_size = 2
